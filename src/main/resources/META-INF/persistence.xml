<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
	<persistence-unit name="moneyMapPU">
		<properties>
			<property name="jakarta.persistence.jdbc.driver"
				value="org.sqlite.JDBC" />
      
      <!-- The database will be saved in database.db --> 
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:sqlite:database.db" />
			<property name="dialect" value="org.hibernate.community.dialect.SQLiteDialect" />
			
      <!-- Create the schema automatically -->
      <property name="hibernate.hbm2ddl.auto" value="update" />
			
      <!-- Show info about the SQL which is executing -->
      <property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>